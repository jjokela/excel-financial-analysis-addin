<UserControl x:Class="ExcelAddInTest.Views.WorksheetInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:ExcelAddInTest.Converters">
    <Grid>
        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="/ExcelAddInTest;component/Resources/Brushes.xaml" />
                </ResourceDictionary.MergedDictionaries>
                <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
                <converters:ListToStringConverter x:Key="ListToStringConverter" />
            </ResourceDictionary>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Capture Image Button -->
        <Button Grid.Row="0"
                Content="Capture Worksheet Image"
                Command="{Binding CaptureImageCommand}"
                Background="{StaticResource BlueBrush}"
                Foreground="White"
                FontSize="14"
                Margin="10"
                Padding="10" />

        <!-- Refresh Tables Button -->
        <Button Grid.Row="1"
                Content="Refresh Tables"
                Command="{Binding RefreshTablesCommand}"
                Background="{StaticResource LightBlueBrush}"
                Foreground="White"
                FontSize="14"
                Margin="10,0,10,10"
                Padding="10" />

        <!-- Detect Data Regions Button -->
        <Button Grid.Row="2"
                Content="Detect Data Regions (SpecialCells)"
                Command="{Binding DetectDataRegionsCommand}"
                Background="#FF9800"
                Foreground="White"
                FontSize="14"
                Margin="10,0,10,10"
                Padding="10" />

        <!-- Copy JSON Button -->
        <Button Grid.Row="3"
                Content="Copy Tables as JSON"
                Command="{Binding CopyTablesJsonCommand}"
                Background="{StaticResource LightBlueBrush}"
                Foreground="White"
                FontSize="14"
                Margin="10,0,10,10"
                Padding="10" />

        <!-- Status Text -->
        <TextBlock Grid.Row="4"
                   Text="{Binding StatusText}"
                   Margin="10,0,10,10"
                   TextWrapping="Wrap" />

        <!-- Content Area -->
        <ScrollViewer Grid.Row="5" VerticalScrollBarVisibility="Auto" Margin="10,0,10,10">
            <StackPanel>
                <!-- Data Regions Section -->
                <ItemsControl ItemsSource="{Binding DataRegions}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#FF9800" BorderThickness="2" Margin="0,0,0,10" Padding="10" Background="#FFF8E1">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <TextBlock Text="{Binding Range}" FontWeight="Bold" FontSize="14" VerticalAlignment="Center" />
                                        <Border Background="#FF9800" CornerRadius="3" Padding="5,2" Margin="8,0,0,0">
                                            <TextBlock Text="Data Region" Foreground="White" FontSize="10" FontWeight="SemiBold" />
                                        </Border>
                                        <Border Background="#4CAF50" CornerRadius="3" Padding="5,2" Margin="5,0,0,0"
                                                Visibility="{Binding LikelyHasHeader, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <TextBlock Text="Has Header" Foreground="White" FontSize="10" FontWeight="SemiBold" />
                                        </Border>
                                    </StackPanel>

                                    <Grid Margin="0,0,0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Rows:" FontWeight="SemiBold" Margin="0,0,10,2" />
                                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding RowCount}" />

                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Columns:" FontWeight="SemiBold" Margin="0,0,10,2" />
                                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ColumnCount}" />
                                    </Grid>

                                    <!-- Columns Section -->
                                    <Expander Header="Columns" IsExpanded="False" Margin="0,5,0,0">
                                        <ItemsControl ItemsSource="{Binding Columns}" Margin="10,5,0,0">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Margin="0,0,0,3">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="30" />
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" Text="{Binding Index, StringFormat='[{0}]'}" Foreground="Gray" />
                                                        <TextBlock Grid.Column="1" Text="{Binding Name}" FontWeight="SemiBold" />
                                                        <TextBlock Grid.Column="2" Text="{Binding DataType}" Foreground="Gray" FontSize="11" />
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Expander>

                                    <!-- Sample Data Section -->
                                    <Expander Header="Sample Data" IsExpanded="False" Margin="0,5,0,0">
                                        <ItemsControl ItemsSource="{Binding SampleData}" Margin="10,5,0,0">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding}" Foreground="Gray" FontSize="11" TextWrapping="Wrap" Margin="0,0,0,2" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Expander>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Tables List -->
                <ItemsControl ItemsSource="{Binding Tables}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#CCCCCC" BorderThickness="1" Margin="0,0,0,10" Padding="10" Background="#F9F9F9">
                                <StackPanel>
                                    <!-- Table Name and Type -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14" VerticalAlignment="Center" />
                                        <Border Background="{StaticResource LightBlueBrush}" CornerRadius="3" Padding="5,2" Margin="8,0,0,0">
                                            <TextBlock Text="{Binding Type}" Foreground="White" FontSize="10" FontWeight="SemiBold" />
                                        </Border>
                                    </StackPanel>

                                    <!-- Table Properties Grid -->
                                    <Grid Margin="0,0,0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Range:" FontWeight="SemiBold" Margin="0,0,10,2" />
                                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Range}" />

                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Rows:" FontWeight="SemiBold" Margin="0,0,10,2" />
                                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding RowCount}" />

                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Columns:" FontWeight="SemiBold" Margin="0,0,10,2" />
                                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding ColumnCount}" />
                                    </Grid>

                                    <!-- Columns Section -->
                                    <Expander Header="Columns" IsExpanded="False" Margin="0,5,0,0">
                                        <ItemsControl ItemsSource="{Binding Columns}" Margin="10,5,0,0">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Margin="0,0,0,3">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="30" />
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" Text="{Binding Index, StringFormat='[{0}]'}" Foreground="Gray" />
                                                        <TextBlock Grid.Column="1" Text="{Binding Name}" FontWeight="SemiBold" />
                                                        <TextBlock Grid.Column="2" Text="{Binding DataType}" Foreground="Gray" FontSize="11" />
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Expander>

                                    <!-- Sample Data Section -->
                                    <Expander Header="Sample Data" IsExpanded="False" Margin="0,5,0,0">
                                        <ItemsControl ItemsSource="{Binding SampleData}" Margin="10,5,0,0">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding}" Foreground="Gray" FontSize="11" TextWrapping="Wrap" Margin="0,0,0,2" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Expander>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
